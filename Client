import java.io.*;
import java.net.*;

public class Client {
    private static final String SERVER = "localhost";
    private static final int PORT = 4588;

    public static void main(String[] args) throws IOException {
        Socket socket = new Socket(SERVER, PORT);
        DataInputStream in = new DataInputStream(socket.getInputStream());
        DataOutputStream out = new DataOutputStream(socket.getOutputStream());
        BufferedReader userInput = new BufferedReader(new InputStreamReader(System.in));

        System.out.println(in.readUTF());
        out.writeUTF(userInput.readLine());
        System.out.println(in.readUTF());
        out.writeUTF(userInput.readLine());

        String response = in.readUTF();
        if (!response.equals("Authenticated")) {
            System.out.println(response);
            socket.close();
            return;
        }

        System.out.println("Connected to chat. Type /quit to exit.");

        // Thread to read incoming messages
        new Thread(() -> {
            try {
                while (true) {
                    String line = in.readUTF();
                    if (line.startsWith("/file ")) {
                        String[] parts = line.split(" ", 3);
                        String sender = parts[1];
                        String fileName = parts[2];
                        int fileSize = in.readInt();
                        byte[] buffer = new byte[fileSize];
                        in.readFully(buffer);

                        FileOutputStream fos = new FileOutputStream("received_" + fileName);
                        fos.write(buffer);
                        fos.close();

                        System.out.println("Received file '" + fileName + "' from " + sender);
                    } else {
                        System.out.println(line);
                    }
                }
            } catch (IOException e) {
                System.out.println("Disconnected from server.");
            }
        }).start();

        // Sending messages
        String input;
        while ((input = userInput.readLine()) != null) {
            if (input.equalsIgnoreCase("/quit")) {
                out.writeUTF("/quit");
                socket.close();
                System.out.println("You have left the chat.");
                break;
            } else if (input.startsWith("/sendfile ")) {
                String[] parts = input.split(" ", 3);
                if (parts.length == 3) {
                    sendFile(parts[1], parts[2], out);
                }
            } else {
                out.writeUTF(input);
            }
        }
    }

    private static void sendFile(String recipient, String filePath, DataOutputStream out) {
        try {
            File file = new File(filePath);
            FileInputStream fis = new FileInputStream(file);
            byte[] data = new byte[(int) file.length()];
            fis.read(data);
            fis.close();

            out.writeUTF("/file " + recipient + " " + file.getName());
            out.writeInt(data.length);
            out.write(data);
            out.flush();

            System.out.println("File sent.");
        } catch (IOException e) {
            System.out.println("Error sending file: " + e.getMessage());
        }
    }
}

